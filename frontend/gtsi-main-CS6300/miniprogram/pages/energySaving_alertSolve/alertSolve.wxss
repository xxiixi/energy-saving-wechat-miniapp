/* pages/energySaving_alertSolve/alertSolve.wxss */
.title {
  font-size: 18px;
}

.textarea-container {
  margin-top: 10px;
}

.comment-textarea {
  width: 100%;
  background-color:antiquewhite;
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 10px;
}

.title-container {
  display: flex;
  justify-content: center;
}

.title-text {
  font-size: 20px; /* 调整字体大小 */
  font-weight: bold; /* 字体加粗 */
  /* 可以添加更多样式，如颜色等 */
}

.fixed-button .custom-button {
  border-radius: 20px !important;
  flex-grow: 1;
  margin: 0 5px; /* 每个按钮之间增加 5px 的边距 */
}

.fixed-button {
  position: fixed;
  bottom: 30px;
  width: 100%;
  display: flex;
  justify-content: center; /* 使按钮集中在中间 */
  padding: 0 5px; /* 增加容器两侧的内边距 */
}